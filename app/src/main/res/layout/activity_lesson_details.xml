<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LessonDetails"
    android:padding="22dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvLessonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Variables and Conditionals"
            android:textSize="24sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvLessonLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length: 1 hour 20 min"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvLessonDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnWatchLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WATCH LESSON"
            android:layout_marginTop="24dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnMarkLessonCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARK COMPLETE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#F44336"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
